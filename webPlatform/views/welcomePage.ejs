        <div id="header">
            <h1 align="center">
                <img src="/images/HEATZY_LOGO.png" alt="heatzy-logo"/>
                <hr />
            </h1>
        </div>

        <div class="left1-1" id="left1-1"> 
            <script>
            var message = '<%= err%>';
            if(message!=''){
                alert(message);
            }
            </script>
            
            
           <label style="font-family:Arial, Helvetica, sans-serif">Se connecter</label>
           
            <form class="form1" action="welcomePage" method="post" align = "left">
                    
                    <input class="text" type="email" name="username" placeholder="e-mail"/><br/>
				    <input class="text" type="password" name="password" placeholder="mot de passe"/><br/>
                    
                    <a href="/resetPwd" class="linkOublier">mot de passe oublié ?</a>
                    <div>
                    <input type="submit" value="OK" style="width:80px;height:22px;background-color:rgb(189, 189, 189);border-radius:5px"/>
                    </div>
            </form>
            <label style="line-height:15px;font-size:15px;color:rgb(156, 156, 156);font-family:Arial, Helvetica, sans-serif;" id="errMot">
                <script>
                var message = "<%- errMot%>";
                console.log(message);
               if(message !== undefined){
                   window.document.getElementById("errMot").innerHTML = "<p><%- errMot%></p>";
               }
                </script>
            </div>
                
        </div>
        <div class="right">
            <label>
                <img src="/images/Heatzy_Img2.png" alt="Heatzy_backgroundImg"/>
